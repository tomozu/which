<div class="user_new">
<h2>新規会員登録</h2><br>
<%= form_with(model: @user, local: true) do |f| %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
   
  <p><% f.label :nickname %>ニックネーム</p>
  <p><%= f.text_field :nickname %></p>

  <p><% f.label :email %>メールアドレス</p>
  <p><%= f.email_field :email %></p>
   
  <p><% f.label :password %>パスワード(6文字以上)</p>
  <p><%= f.password_field :password %></p>
 
  <p><% f.label :password_confirmation %>パスワード再入力</p>
  <p><%= f.password_field :password_confirmation %></p>
  
  <p><% f.label :gender %>性別</p>
  <p><%= f.text_field :gender %></p>
  
  <p><% f.label :age %>歳</p>
  <p><%= f.number_field :age %></p>
  
  <p><% f.label :image %>プロフィール写真</p>
  <p><%= f.file_field :image %></p><br>
  
<div class="inputbutton">
  <%= f.submit "この内容で登録する" %>
</div>
<% end %>
</div>